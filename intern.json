{
  "configs": {
    "common": {
      "description": "Common Browserstack configuration",
      "functionalSuites": "tests/functional/**/*.js",
      "plugins": "./node_modules/dotenv/config",
      "tunnel": "browserstack",
      "capabilities": {
        "name": "NEOP",
        "browserstack.debug": true,
        "resolution": "1920x1080"
      }
    },

    "mac": {
      "description": "Current Mac OS browsers",
      "extends": ["common"],
      "environments+": [
        {
          "os": "OS X",
          "os_version": "High Sierra",
          "browserName": "Safari",
          "browser_version": "11"
        },
        {
          "os": "OS X",
          "os_version": "High Sierra",
          "browserName": "Opera",
          "browser_version": "12.15"
        },
        {
          "os": "OS X",
          "os_version": "High Sierra",
          "browserName": "Chrome",
          "browser_version": "63"
        },
        {
          "os": "OS X",
          "os_version": "High Sierra",
          "browserName": "Firefox",
          "browser_version": "57"
        }
      ]
    },

    "win": {
      "description": "Current Windows browsers",
      "extends": ["common"],
